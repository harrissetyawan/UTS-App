<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".constraint">
    <TextView android:layout_width="wrap_content"
              android:layout_height="0dp"
              android:text="Constraint Layout"
              android:id="@+id/text1"
              android:textSize="20sp"
              android:layout_marginTop="134dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.498"
    />
    <Button
            android:text="Take..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take"
            android:layout_marginBottom="292dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp"
            android:layout_marginStart="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="Choose..."
            android:layout_width="94dp"
            android:layout_height="51dp"
            android:id="@+id/choose"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/take" android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="387dp"
            android:layout_marginBottom="63dp" app:layout_constraintBottom_toTopOf="@+id/tv_data_received"
            app:layout_constraintVertical_bias="0.057" app:layout_constraintHorizontal_bias="0.946"/>
    <ImageView
            android:layout_width="123dp"
            android:layout_height="127dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="60dp" app:layout_constraintBottom_toTopOf="@+id/take"/>
    <TextView
            android:id="@+id/tv_data_received"
            android:layout_width="153dp"
            android:layout_height="36dp"
            android:text="data"
            android:textSize="15sp"
            android:layout_marginBottom="124dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.511"/>
</android.support.constraint.ConstraintLayout>